<!-- JavaScript to control the visibility of the popup -->
<script>
    function showPopup() {
        document.getElementById('missYouOverlay').style.display = 'flex';
    }

    function hidePopup() {
        document.getElementById('missYouOverlay').style.display = 'none';
    }
</script>

