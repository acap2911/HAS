<!-- Trigger button to show the popup -->
<button onclick="showPopup()">Show Popup</button>

<!-- The overlay and popup box -->
<div id="missYouOverlay" class="overlay">
    <div class="popup">
        <h1>HALLO B</h1>
        <p>Just wanna say this in this way for fun</p>
		<p>I love and miss you b</p>
